<div class="row mt-4">
    <h1 class="text-center">Web Library - Registrarse</h1>
</div>

<div class="d-flex justify-content-center align-items-center mt-3 mb-3" id="authors-form-container">
<div class="col-6">
    <div class="card">
        <div class="card-body">
            <form method="post" id="base-form" action="/users/register">

                <div class="mb-3">
                <label for="user-name" class="form-label">Nombre de Usuario</label>
                <input class="form-control" id="user-name" type="text" name="userName" value=""  placeholder="Ej. Pablo Rodriguez" required>
                </div>

                <div class="mb-3">
                <label for="user-email" class="form-label">Correo Electrónico</label>
                <input class="form-control" id="user-email" type="email" name="userEmail" value=""  placeholder="Ej. PabloRodriguez@..." required>
                </div>

                <div class="mb-3">
                <label for="user-pass" class="form-label">Contraseña</label>
                <input class="form-control" id="user-pass" type="password" name="userPassword" value=""  placeholder="Introducir..." required>
                </div>

                <div class="mb-3">
                <label for="user-pass-confirm" class="form-label">Confirmar Contraseña</label>
                <input class="form-control" id="user-pass-confirm" type="password" name="userPasswordConfirm" value=""  placeholder="Introducir nuevamente..." required>
                </div>
            

                <div class="d-flex gap-2">
                <div clas="col-6 mb-3">
                    <a class="btn btn-danger" href="/" id="clear-button"><i class="bi bi-arrow-left"></i> Volver</a>
                </div>  

                <div clas="col-6 mb-3 ">
                    <button type="submit" class="btn btn-primary" id="create-button"><i class="bi bi-floppy"></i> Registrarse</button>
                </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div>