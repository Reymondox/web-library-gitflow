<div class="row mt-4">
    <h1 class="text-center">Web Library - Reiniciar Contrase単a</h1>
</div>

<div class="d-flex justify-content-center align-items-center mt-3 mb-3" id="authors-form-container">
<div class="col-6">
    <div class="card">
        <div class="card-body">
            <form method="post" id="base-form" action="/users/reset">

                <div class="mb-3">
                <label for="user-pass" class="form-label">Nueva Contrase単a</label>
                <input class="form-control" id="user-pass" type="password" name="userPassword" value=""  placeholder="Introducir..." required>
                </div>

                <div class="mb-3">
                <label for="user-pass-confirm" class="form-label">Confirmar Contrase単a</label>
                <input class="form-control" id="user-pass-confirm" type="password" name="userPasswordConfirm" value=""  placeholder="Introducir Nuevamente..." required>
                </div>

                <input type="hidden" name="userPasswordToken" value="{{passwordToken}}">
                <input type="hidden" name="userId" value="{{userId}}">

                <div class="d-flex gap-2">
                <div clas="col-6 mb-3">
                    <a class="btn btn-danger" href="/" id="clear-button"><i class="bi bi-arrow-left"></i> Volver</a>
                </div>  

                <div clas="col-6 mb-3 ">
                    <button type="submit" class="btn btn-primary" id="create-button"><i class="bi bi-floppy"></i> Reiniciar Contrase単a</button>
                </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div>