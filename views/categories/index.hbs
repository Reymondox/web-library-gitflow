<div class="row mt-4">
    <h1 class="text-center">Alterar Categorías</h1>
</div>

<hr>

<div class="row mt-2 mb-2 ">
    <div class="col-12">
        <a href="/categories/create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Agregar Nueva Categoría</a>
    </div>
</div>


{{#if hasCategories}}
<div class="row mt-3">
{{#each categoriesList}}
    <div class="col-12 col-sm-3 mb-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{this.name}}</h4>
                 <p class="card-text">
                <ul class="list-unstyled">
                    <li><i class="bi bi-justify-left"></i> <strong> Descripción: </strong> {{this.description}}</li>
                    <li><i class="bi bi-book"></i> <strong> Libros: </strong> {{this.bookCount}}</li>  
                </ul>
                </p>
                <hr>
                <div class="mt-2">
                <a href="/categories/edit/{{this.id}}" class="btn btn-primary float-start me-2"><i class="bi bi-pencil"></i> Editar</a>
                <form method="post" action="/categories/delete">
                    <input type="hidden" value="{{this.id}}" name="categorieId" />
                    <button type="submit" class="btn btn-danger float-start delete-category"><i class="bi bi-trash"></i> Eliminar</button>
                </form>
                </div>
            </div>
        </div>
    </div>    
{{/each}}
</div>

{{else}}

<div class="row">
    <div class="col-12">
        <div class="alert alert-secondary text-center" role="alert">
            <i class="bi bi-info-circle"></i>
            No existe ninguna categoría registrada.
        </div>
    </div>
</div>

{{/if}}    

{{#section "scripts"}}
 <script src="/assets/js/site/index.js"></script>
{{/section}}