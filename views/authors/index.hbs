<div class="row mt-4">
    <h1 class="text-center">Alterar Autores</h1>
</div>

<hr>

<div class="row mt-2 mb-2 ">
    <div class="col-12">
        <a href="/authors/create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Agregar Nuevo Autor</a>
    </div>
</div>


{{#if hasAuthors}}
<div class="row mt-3">
{{#each authorsList}}
    <div class="col-12 col-sm-3 mb-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{this.name}}</h4>
                 <p class="card-text">
                <ul class="list-unstyled">
                    <li><i class="bi bi-envelope-at"></i> <strong> Correo: </strong> {{this.email}}</li>
                    <li><i class="bi bi-book"></i> <strong> Libros: </strong> {{this.bookCount}}</li>  
                </ul>
                </p>
                <hr>
                <div class="mt-2">
                <a href="/authors/edit/{{this.id}}" class="btn btn-primary float-start me-2"><i class="bi bi-pencil"></i> Editar</a>
                <form method="post" action="/authors/delete">
                    <input type="hidden" value="{{this.id}}" name="authorId" />
                    <button type="submit" class="btn btn-danger float-start delete-author"><i class="bi bi-trash"></i> Eliminar</button>
                </form>
                </div>
            </div>
        </div>
    </div>    
{{/each}}
</div>

{{else}}

<div class="row">
    <div class="col-12">
        <div class="alert alert-secondary text-center" role="alert">
            <i class="bi bi-info-circle"></i>
            No existe ning√∫n autor registrado.
        </div>
    </div>
</div>

{{/if}}    

{{#section "scripts"}}
 <script src="/assets/js/site/index.js"></script>
{{/section}}